{
    "name": "irokaru/nonono-util",
    "description": "utils",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "fixer:dry": "vendor/bin/php-cs-fixer fix --dry-run --diff --diff-format udiff --config=./.php_cs",
        "fixer": "vendor/bin/php-cs-fixer fix --config=./.php_cs"
    },
    "autoload": {
        "psr-4": {
            "nonono\\": ["src/", "tests/"]
        }
    },
    "authors": [
        {
            "name": "irokaru",
            "email": "karuta@nononotyaya.net"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^2.16"
    }
}
